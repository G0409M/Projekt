@page "/reviews"
@using Projekt.SharedKernel.Dto.Review
@inject IReviewService _reviewService
@inject NavigationManager _navigationManager
@inject IJSRuntime _js

<PageTitle>Review list</PageTitle>
<h1>Review list</h1>
<div class="row">
 @foreach (var p in _reviewList)
 {
 <div class="card m-2" style="width: 18rem;">
 <div class="card-body">
 <h5 class="card-title">@p.Comment</h5>
 <p class="card-text">@p.Rating</p>
 </div>
 </div>
 }
</div>
@code {
 private List<RevieweDto> _reviewList = null;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        LoadMovieRoles();
    }

    private void LoadMovieRoles()
    {
        _reviewList = _reviewService.GetAll();
    }
}